@page
@model ASAssignment_222746Q.Pages.ForgotPasswordModel
@{
}

<div class="container mt-5">

	<div class="row justify-content-center align-items-center">

		<div class="col-sm-12 col-md-12 col-lg-4">
			<h1 class="mb-3">Forgot Password </h1>

			<form method="post" enctype="multipart/form-data">
				<div asp-validation-summary="All" class="text-danger"></div>


				<! -- EMAIL -->
				<div class="mb-3">
					<label class="form-label" asp-for="FPModel.Email">Email Address</label>
					<input type="Text" asp-for="FPModel.Email" class="form-control" />
					<span asp-validaton-for="FPModel.Email" class="text-danger"></span>
				</div>

				<! -- SUBMIT BUTTON -->
				<div class="mb-3 text-center">
					<button type="submit" class="btn btn-primary btn-block">
						Send Password Reset Email
					</button>
				</div>
			</form>
		</div>
	</div>
</div>
